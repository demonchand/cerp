<h2>Sign up</h2>

<%= semantic_form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
    <% f.inputs do %>
        <%= f.input :email %>
        <%= f.input :password %>
        <%= f.input :password_confirmation %>
				<%= f.input :roles, :as => :check_boxes, :label => false, :collection => Role.all %>
				<%= f.input :projects, :as => :check_boxes, :label => false, :collection => Project.all %>
    <% end %>
    <%= f.buttons %>
<% end %>

<%= render :partial => "devise/shared/links" %>
