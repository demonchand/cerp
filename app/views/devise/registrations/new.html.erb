<h2>Sign up</h2>

<%= semantic_form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
    <% f.inputs do %>
        <%= f.input :email %>
        <%= f.input :password %>
        <%= f.input :password_confirmation %>
    <% end %>
    <% f.inputs :name => "roles" do %>
        <%= f.semantic_fields_for :roles do |x|%>
            <%= x.input :name, :label => false, :as => :check_boxes, :collection => Role.all %>
        <% end %>
    <% end %>
    <% f.inputs :name => "Projects" do %>
        <%= semantic_fields_for :projects do |pro| %>
            <%= pro.input :name, :label => false, :as => :check_boxes, :collection => Project.all %>
        <% end %>
    <% end %>
    <%= f.buttons %>
<% end %>

<%= render :partial => "devise/shared/links" %>
